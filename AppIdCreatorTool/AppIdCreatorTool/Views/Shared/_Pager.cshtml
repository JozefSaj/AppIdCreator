@model AppIdCreatorTool.Model.Pager
<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller=@Model.Controller asp-action=@Model.Action asp-route-pg="1" asp-route-recordName=@Model.RecordName>
                        First
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action=@Model.Action asp-route-pg="@(Model.CurrentPage - 1)" asp-route-recordName=@Model.RecordName>
                        Previous
                    </a>
                </li>

            }
            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action=@Model.Action asp-route-pg="@pge" asp-route-recordName=@Model.RecordName>
                        @pge
                    </a>
                </li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action=@Model.Action asp-route-pg="@(Model.CurrentPage + 1)" asp-route-recordName=@Model.RecordName>
                        Next
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action=@Model.Action asp-route-pg="@(Model.TotalPages)" asp-route-recordName=@Model.RecordName>
                        Last
                    </a>
                </li>

            }
        </ul>
    }

</div>
